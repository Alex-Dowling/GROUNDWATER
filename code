#include <iostream>

using namespace std;

void Input (double& input);

void Display ();

void display2 ();

int main()
{
    double input;

    Input (input);

    if (input == 1)
    {
        Display ();
    }

    if (input == 2)
    {
        display2 ();
    }
    return 0;
}

void Input (double& input)
{
    cout<<"Would you like to see the groundwater lyrics"<<endl;
    cout<<"1 for yes 2 for no"<<endl;
    cin>>input;
    while (true)
    {
        if (cin.fail())
        {
            cin.clear();
            cout<<"Please input a number"<<endl;
            cin.ignore(10000, '\n');
            cin>>input;
        }
        if (input > 2)
        {
            cin.clear();
            cout<<"Please enter 1 or 2"<<endl;
            cin>>input;
        }
        if (input < 1)
        {
            cin.clear();
            cout<<"Please enter 1 or 2"<<endl;
            cin>>input;
        }
        else
        {
            break;
        }
    }
}

